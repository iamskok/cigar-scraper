{
  "compilerOptions": {
    "target": "es2022",
    "module": "node16",
    "lib": ["ES2022", "DOM", "DOM.Iterable"],
    "moduleResolution": "node16",
    "rootDir": ".",
    "outDir": "build",
    "allowSyntheticDefaultImports": true,
    "importHelpers": true,
    "alwaysStrict": true,
    "sourceMap": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitAny": false,
    "noImplicitThis": false,
    "strictNullChecks": true
  },
  "include": ["src/**/*", "__tests__/**/*", "tests/diagnose-environment.ts", "tests/analyze-results.ts", "tests/test-real-data-validation.ts", "tests/test-schema-validation.ts", "tests/test-single-url.ts", "tests/test-single.ts"]
}
